#!/usr/bin/env python
"""
Daemon script with usage:

    bobd [--c={/path/to/conf}] [--g={/path/to/gunicorn/conf}] -- {gunicorn-options}

e.g.:

.. code:: bash

    bobd -- -w 1

"""
from __future__ import unicode_literals

import argparse
import os
import subprocess
import sys
import signal
import bob


def create_arg_parser():
    parser = argparse.ArgumentParser()
    parser.add_argument(
        '-u', '--uwsgi-conf',
        default=os.environ.get('BOB_UWSGI_CONF', '/etc/bob/uwsgi.conf'),
    )
    return parser


def uwsgi(uwsgi_conf, extras):
    executable = os.path.join(os.path.dirname(sys.executable), 'uwsgi')
    cmd = [
        executable,
        uwsgi_conf,
    ] + extras

    print cmd
    return subprocess.Popen(cmd)


def main():
    extras = []
    for i, arg in enumerate(sys.argv):
        if arg == '--':
            extras = sys.argv[i + 1:]
            args = sys.argv[1:i]
            break
    else:
        args = sys.argv[1:]
    arg_parser = create_arg_parser()
    args = arg_parser.parse_args(args)

    proc = uwsgi(
        args.uwsgi_conf,
        extras
    )

    def send_hup(signum, _):
        proc.send_signal(signum)

    signal.signal(signal.SIGHUP, send_hup)

    try:
        rc = proc.wait()
    except KeyboardInterrupt:
        rc = 0

    sys.exit(rc)


if __name__ == '__main__':
    main()
